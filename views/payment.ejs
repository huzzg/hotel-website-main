<%- include('partials/header') %>
<style>
  .payment-container { max-width: 700px; margin: 50px auto; }
  .payment-form { background: white; padding: 30px; border-radius: 15px; box-shadow: 0 4px 20px rgba(0,0,0,0.1); }
</style>

<div class="payment-container">
  <h2 class="text-center mb-4">Thanh Toán</h2>
  <div class="payment-form">
    <h5>Booking: <%= booking._id %></h5>
    <p>Phòng: <strong><%= booking.roomId.type %> - <%= booking.roomId.roomNumber %></strong></p>
    <p>Tổng cần thanh toán: <strong class="text-primary"><%= (booking.totalPrice || 0).toLocaleString('vi-VN') %> đ</strong></p>

    <!-- nếu bạn chưa kết nối Stripe, form này sẽ gọi route giả lập /user/pay/:bookingId -->
    <form action="/user/pay/<%= booking._id %>" method="POST">
      <div class="mb-3">
        <label class="form-label">Chọn phương thức</label>
        <select class="form-select" name="method">
          <option value="manual">Thanh toán thử (offline)</option>
          <option value="card">Thẻ (Stripe)</option>
        </select>
      </div>

      <div class="mb-3">
        <button class="btn btn-primary w-100" type="submit">Xác nhận thanh toán</button>
      </div>
    </form>

    <div class="text-muted small">Lưu ý: đây là trang thanh toán mẫu — bạn có thể tích hợp Stripe/Paypal sau.</div>
  </div>
</div>

<%- include('partials/footer') %>
